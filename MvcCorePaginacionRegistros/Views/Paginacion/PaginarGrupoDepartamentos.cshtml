@model List<Departamento>

@{
    ViewData["Title"] = "PaginarGrupoDepartamentos";
}

@{
    int numeroPagina = 1;
    int numeroregistros = (int)ViewData["NUMEROREGISTROS"];
}

<h1>Paginar Grupo Departamentos</h1>

<ul class="list-group list-group-horizontal">
    @for (int i = 1; i <= numeroregistros; i += 2)
    {
        <li class="list-group-item list-group-item-warning">
            <a asp-controller="Paginacion"
               asp-action="PaginarGrupoDepartamentos"
               asp-route-posicion="@i">
                @numeroPagina
            </a>
        </li>
        numeroPagina += 1;
    }
</ul>

<table class="table table-dark table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>NOMBRE</th>
            <th>LOCALIDAD</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var dept in Model)
        {
            <tr>
                <td>@dept.IdDepartamento</td>
                <td>@dept.Nombre</td>
                <td>@dept.Localidad</td>
            </tr>
        }
    </tbody>
</table>
