@model IEnumerable<MvcCorePaginacionRegistros.Models.VistaDepartamento>

@{
    ViewData["Title"] = "PaginarGrupoVistaDepartamento";
}

@{ 
    int numeroPagina = 1;
    int numeroregistros = (int)ViewData["NUMEROREGISTROS"];
}

<h1>Paginar Grupo VistaDepartamento</h1>

<ul class="list-group list-group-horizontal">
    @for (int i = 1; i <= numeroregistros; i += 2)
    {
        <li class="list-group-item list-group-item-info">
            <a asp-controller="Paginacion"
               asp-action="PaginarGrupoVistaDepartamento"
               asp-route-posicion="@i">
                @numeroPagina
            </a>
        </li>
        numeroPagina += 1;
    }
</ul>

<hr/>
@Html.Raw(ViewData["LINKS"])
<hr/>

<table class="table table-warning table-bordered">
    <thead>
        <tr>
            <th>ID</th>
            <th>NOMBRE</th>
            <th>LOCALIDAD</th>
            <th>POSICION</th>
        </tr>
    </thead>
    <tbody>
@foreach (var dept in Model) {
        <tr>
            <td>@dept.IdDepartamento</td>
            <td>@dept.Nombre</td>
            <td>@dept.Localidad</td>
            <td>@dept.Posicion</td>
        </tr>
}
    </tbody>
</table>
